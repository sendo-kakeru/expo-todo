{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./tsconfig.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "style": {
        "useSelfClosingElements": "error"
      },
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noConstantCondition": "error"
			},
			"complexity": {
				"useOptionalChain": "error"
			},
			"suspicious": {
				"noExplicitAny": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva"]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
